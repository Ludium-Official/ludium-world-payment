# init setting 
# 1) touch .env
# 2) `RUN_MODE=development` copy to .env
# or 
# $ export RUN_MODE=development 
# then check with `echo $RUN_MODE`

# .env.local example (for docker-compose)
HOST=0.0.0.0
PORT=8090

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ludium_local
POSTGRES_HOST=ludium-local-db
POSTGRES_PORT=5432

POSTGRES_TEST_USER=ludium_user
POSTGRES_TEST_PASSWORD=dev_only_pwd

DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

